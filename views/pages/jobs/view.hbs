<div class="container">
  <div class="col-xs-8 col-sm-8 text-left">
    <h2>Inspect job #{{jobId}}</h2>
    <p>Job ID:  | Time in queue: 17s | Execution time: 62s | Attempted runs: 1</p>
  </div>

  <div class="col-xs-4 col-sm-4 text-right">
    <a href="/jobs/create-new" class="btn btn-sm btn-primary">Create a new job</a>
  </div>
</div>

<br />

<div class="container">
  <div class="col-xs-12">
    <p>File: {{data.fileBasename}}</p>
    <p>Output: {{data.format}}</p>
    <p>State: {{data.state}}</p>

    {{#if data.url}}
      <p><a href="{{data.url}}" class="btn btn-md btn-primary">Download</a></p>
    {{else}}
      <p>Progress: {{#if data.progress}}{{data.progress}}{{else}}0{{/if}}%</p>
      <meta http-equiv="refresh" content="3">
    {{/if}}

    <pre>{{stringifyJson data}}</pre>
  </div>
</div>
