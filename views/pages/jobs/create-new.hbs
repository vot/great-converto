<div class="container-fluid">
  <div class="row">
    <div class="col-xs-10 col-sm-6 col-sm-offset-1 text-left">
      <h2>Create a new job</h2>
      <p>Define a new job by providing a URL to the source file or by direct upload.</p>
    </div>

    <div class="col-xs-4 col-sm-2 text-right">
      <!-- <a href="#" class="btn btn-sm btn-primary">Next step &rsaquo;</a> -->
    </div>
  </div>

  <br /><br />

  <form action="/jobs/create-new/upload" enctype="multipart/form-data" method="POST" style="margin: 0 auto">
    <!-- STEP 1 -->
    <div class="row text-center">
      <h3 class="text">Step 1</h3>
      <div class="col-xs-4 col-xs-offset-1">
        <p>Create a job by direct upload</p>
        <small>Max upload size: 50MB</small>
        <br />
        <br />
        <div class="form-group">
          <!-- <div class="input-group"> -->
            <input class="form-control" type="file" name="vhmc-input-file"><br />
          <!-- </div> -->
        </div>
      </div>

      <div class="col-xs-2">
      <p>OR</p>
      </div>

      <div class="col-xs-4 col-xs-offset-2x">

        <p>Create a job from a remote URL</p>
        <br />
        <br />
        <div class="form-group">
          <!-- <div class="input-group"> -->
            <input class="form-control" type="input" name="vhmc-input-url" placeholder="Paste the media URL here" ><br />
          <!-- </div> -->
        </div>

      </div>
    </div>

    <!-- STEP 2 -->
    <div class="row text-center">
      <h3 class="text">Step 2</h3>
      <div class="col-xs-4 col-xs-offset-4">
        <div class="form-group">
          <strong>Preset</strong>
          {{#each presets}}
          <div class="input-group">
            <label>
              <input type="radio" name="vhmc-output-preset" value="{{this.value}}" />
              {{this.name}}
              <br />
              <small>{{this.description}}</small>
            </label>
          </div>
          {{/each}}

          </div>
        </div>
      </div>

    <!-- STEP 3 -->
    <div class="row text-center">
      <h3 class="text">Step 3</h3>
      <div class="col-xs-4 col-xs-offset-4">
        <div class="form-group">
          <strong>Optional metadata</strong>
          <div class="input-group">
            <label>
              Owner
              <input type="text" name="vhmc-input-owner" value="" />
            </label>
          </div>
          <div class="input-group">
            <label>
              Origin
              <input type="text" name="vhmc-input-origin" value="" />
            </label>
          </div>

          </div>
        </div>
      </div>

      <div class="row text-right">
        <div class="col-xs-4 col-xs-offset-4">
          <button type="submit" class="btn btn-sm btn-primary">Create</button>
        </div>
      </div>

    </div>
  </form>
</div>
