{
  "extends": "airbnb-base",
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "arrow-body-style": 0,
    "no-console": 0,
    "max-len": 0,
    "comma-dangle": 0,
    "no-param-reassign": 0,
    "arrow-parens": 0,
    "prefer-destructuring": 0,
    "array-bracket-spacing": 0,
    "no-underscore-dangle": 0,
    "consistent-return": 1,
    "padded-blocks": 1,
    "spaced-comment": 1,
    "no-var": 1,
    "indent": 1,
    "object-shorthand": 1,
    "strict": 0,
    "linebreak-style": 0,
    "no-use-before-define": [2, { "functions": false, "classes": true }],
    "no-unused-vars": 1,
    "space-before-function-paren": 0,
    "operator-linebreak": [2, "after"]
  }
}
